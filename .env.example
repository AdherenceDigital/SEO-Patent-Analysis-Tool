# SEO Patent Analysis Tool - Environment Variables
# Copy this file to .env and edit as needed

# Application configuration
APP_NAME='SEO Patent Analysis Tool'
VERSION='1.0.0'
DEBUG=False

# Database configuration
DATABASE_PATH='/var/db/seo-patent-tool/seo_tool.db'

# File uploads
UPLOAD_FOLDER='uploads'
MAX_CONTENT_LENGTH=104857600  # 100MB

# Google API (replace with your actual API keys)
GOOGLE_API_KEY=''
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=''
GOOGLE_CREDENTIALS_FILE='google_credentials.json'

# Patent API
PATENT_API_ENDPOINT='https://patents.google.com/api/search'

# GitHub settings (replace with your actual credentials)
GITHUB_REPO='SEO-Patent-Analysis-Tool'
GITHUB_USERNAME='AdherenceDigital'
GITHUB_TOKEN=''

# Server settings
PORT=8000
HOST='0.0.0.0'
